<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_blue"
    tools:context="com.project.android.nctu.nomorelost.UploadLostItem$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white">
            <Button
                android:id="@+id/uploadListitem"
                style="@style/MenuButton"
                android:background="@drawable/upload_lostitem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="upload picture"
                android:layout_gravity="center"
                android:id="@+id/text" />
        </LinearLayout >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="kind:"
                android:id="@+id/title"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="生活用品"
                    android:id="@+id/checkdailyuse" />

                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="衣物配件"
                    android:id="@+id/checkclothes" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="現金證件"
                    android:id="@+id/checkcard"
                    />
                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="圖書文具"
                    android:id="@+id/checkbooks"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="3C週邊"
                    android:id="@+id/check3c"
                    />
                <CheckBox
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="其他"
                    android:id="@+id/checkelse"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="description:"
                android:textSize="24sp"
                android:id="@+id/textView_description" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="phone number:"
                android:textSize="24sp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="email:"
                android:textSize="24sp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>